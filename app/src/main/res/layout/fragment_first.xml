<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/TollbarHeader"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/tokped">

        <ImageView
            android:id="@+id/bgsearch"
            app:layout_constraintTop_toTopOf="@id/TollbarHeader"
            app:layout_constraintStart_toStartOf="@id/TollbarHeader"
            android:layout_marginStart="8dp"
            android:background="@color/white"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="64dp"
            android:layout_width="160dp"
            android:layout_height="32dp"
            app:layout_constraintCircleRadius="80dp"
            android:contentDescription="@string/placeholder" />
        <SearchView
            android:layout_marginStart="4dp"
            android:id="@+id/searchicon"
            android:autofillHints="name"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="@id/bgsearch"
            app:layout_constraintTop_toTopOf="@id/bgsearch"
            app:layout_constraintBottom_toBottomOf="@id/bgsearch"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:queryHint="@string/descsearch"/>

        <TextView
            app:layout_constraintStart_toEndOf="@id/searchicon"
            app:layout_constraintTop_toTopOf="@id/searchicon"
            app:layout_constraintBottom_toBottomOf="@id/searchicon"
            android:text="@string/searchhint"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:backgroundTint="@color/none"
            android:id="@+id/mail_i"
            app:layout_constraintStart_toEndOf="@id/bgsearch"
            app:layout_constraintTop_toTopOf="@id/bgsearch"
            app:layout_constraintEnd_toStartOf="@id/notif_i"
            app:layout_constraintBottom_toBottomOf="@id/bgsearch"
            android:src="@drawable/ic_baseline_mail_outline_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/account" />
        <ImageButton
            android:backgroundTint="@color/none"
            android:id="@+id/notif_i"
            app:layout_constraintTop_toTopOf="@id/bgsearch"
            app:layout_constraintEnd_toStartOf="@id/shop_i"
            app:layout_constraintStart_toEndOf="@id/mail_i"
            app:layout_constraintBottom_toBottomOf="@id/bgsearch"
            android:src="@drawable/ic_baseline_notifications_none_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/account" />
        <ImageButton
            android:backgroundTint="@color/none"
            android:id="@+id/shop_i"
            app:layout_constraintStart_toEndOf="@id/notif_i"
            app:layout_constraintTop_toTopOf="@id/bgsearch"
            app:layout_constraintEnd_toStartOf="@id/menu_i"
            app:layout_constraintBottom_toBottomOf="@id/bgsearch"
            android:src="@drawable/shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/account" />
        <ImageButton
            android:backgroundTint="@color/none"
            android:id="@+id/menu_i"
            app:layout_constraintStart_toEndOf="@id/shop_i"
            app:layout_constraintTop_toTopOf="@id/bgsearch"
            app:layout_constraintEnd_toEndOf="@id/TollbarHeader"
            app:layout_constraintBottom_toBottomOf="@id/bgsearch"
            android:src="@drawable/ic_baseline_menu_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/account" />
        <ImageView
            android:id="@+id/loc_i"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/bgsearch"
            android:src="@drawable/ic_baseline_location_on_24"
            app:layout_constraintStart_toStartOf="@id/TollbarHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/text_alamat"
            app:layout_constraintTop_toTopOf="@id/loc_i"
            app:layout_constraintStart_toEndOf="@id/loc_i"
            app:layout_constraintBottom_toBottomOf="@id/loc_i"
            android:text="@string/alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_a"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/danabox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bgdana"
            app:layout_constraintTop_toTopOf="@id/danabox"
            app:layout_constraintBottom_toBottomOf="@id/danabox"
            app:layout_constraintStart_toStartOf="@id/danabox"
            app:layout_constraintEnd_toEndOf="@id/danabox"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/tokped_dana"
            android:layout_width="match_parent"
            android:layout_height="32dp"/>

        <ImageView
            android:id="@+id/dana_i"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@id/bgdana"
            app:layout_constraintBottom_toBottomOf="@id/bgdana"
            app:layout_constraintStart_toStartOf="@id/bgdana"
            app:layout_constraintEnd_toStartOf="@id/dana_value"
            android:src="@drawable/ic_baseline_account_balance_wallet_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/dana_value"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/bgdana"
            app:layout_constraintBottom_toBottomOf="@id/bgdana"
            app:layout_constraintStart_toEndOf="@id/dana_i"
            android:text="@string/dana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            app:layout_constraintTop_toTopOf="@id/bgdana"
            app:layout_constraintBottom_toBottomOf="@id/bgdana"
            app:layout_constraintEnd_toEndOf="@id/bgdana"
            app:layout_constraintStart_toEndOf="@id/dana_value"
            android:id="@+id/member_i"
            android:src="@drawable/badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/member_value"
            android:text="@string/member"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/bgdana"
            app:layout_constraintBottom_toBottomOf="@id/bgdana"
            app:layout_constraintStart_toEndOf="@id/member_i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fitur1box"
        app:layout_constraintTop_toBottomOf="@id/danabox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/offstore"
            app:layout_constraintTop_toTopOf="@id/fitur1box"
            app:layout_constraintStart_toStartOf="@id/fitur1box"
            app:layout_constraintEnd_toStartOf="@id/lihatsemua"
            android:src="@drawable/offstore"
            android:backgroundTint="@color/none"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/offstore"
            app:layout_constraintStart_toStartOf="@id/offstore"
            app:layout_constraintEnd_toEndOf="@id/offstore"
            android:text="@string/official_store"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/lihatsemua"
            app:layout_constraintTop_toTopOf="@id/fitur1box"
            app:layout_constraintStart_toEndOf="@id/offstore"
            app:layout_constraintEnd_toStartOf="@id/kebutuhanharian"
            android:src="@drawable/offstore"
            android:backgroundTint="@color/none"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/lihatsemua"
            app:layout_constraintStart_toStartOf="@id/lihatsemua"
            app:layout_constraintEnd_toEndOf="@id/lihatsemua"
            android:text="@string/lihat_semua"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/kebutuhanharian"
            app:layout_constraintEnd_toStartOf="@id/handphonetablet"
            app:layout_constraintTop_toTopOf="@id/fitur1box"
            app:layout_constraintStart_toEndOf="@id/lihatsemua"
            android:src="@drawable/offstore"
            android:backgroundTint="@color/none"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/kebutuhanharian"
            app:layout_constraintStart_toStartOf="@id/kebutuhanharian"
            app:layout_constraintEnd_toEndOf="@id/kebutuhanharian"
            android:text="@string/kebutuhan_harian"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/handphonetablet"
            app:layout_constraintTop_toTopOf="@id/fitur1box"
            app:layout_constraintStart_toEndOf="@id/kebutuhanharian"
            app:layout_constraintEnd_toStartOf="@id/topup"
            android:src="@drawable/offstore"
            android:backgroundTint="@color/none"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/handphonetablet"
            app:layout_constraintStart_toStartOf="@id/handphonetablet"
            app:layout_constraintEnd_toEndOf="@id/handphonetablet"
            android:text="@string/handphone"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/topup"
            app:layout_constraintTop_toTopOf="@id/fitur1box"
            app:layout_constraintStart_toEndOf="@id/handphonetablet"
            app:layout_constraintEnd_toStartOf="@id/keuangan"
            android:src="@drawable/offstore"
            android:backgroundTint="@color/none"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/topup"
            app:layout_constraintStart_toStartOf="@id/topup"
            app:layout_constraintEnd_toEndOf="@id/topup"
            android:text="@string/top_up"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/keuangan"
            app:layout_constraintStart_toEndOf="@id/topup"
            app:layout_constraintTop_toTopOf="@id/fitur1box"
            app:layout_constraintEnd_toEndOf="@id/fitur1box"
            android:src="@drawable/offstore"
            android:backgroundTint="@color/none"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/keuangan"
            app:layout_constraintStart_toStartOf="@id/keuangan"
            app:layout_constraintEnd_toEndOf="@id/keuangan"
            android:text="@string/keuangan"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:id="@+id/promoscroll"
        android:layout_marginTop="4dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/fitur1box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/promotop"
            android:layout_width="512dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/promotop1"
                app:layout_constraintTop_toTopOf="@id/promotop"
                app:layout_constraintStart_toStartOf="@id/promotop"
                android:src="@drawable/promoscroll"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/promotop2"
                app:layout_constraintTop_toTopOf="@id/promotop"
                app:layout_constraintStart_toEndOf="@id/promotop1"
                android:src="@drawable/promoscroll"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fitur2box"
        app:layout_constraintTop_toBottomOf="@id/promoscroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/pedulilindungi"
            app:layout_constraintTop_toTopOf="@id/fitur2box"
            app:layout_constraintStart_toStartOf="@id/fitur2box"
            app:layout_constraintEnd_toStartOf="@id/bangga"
            android:src="@drawable/offstore"
            android:backgroundTint="@color/none"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/pedulilindungi"
            app:layout_constraintStart_toStartOf="@id/pedulilindungi"
            app:layout_constraintEnd_toEndOf="@id/pedulilindungi"
            android:text="@string/official_store"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/bangga"
            app:layout_constraintTop_toTopOf="@id/fitur2box"
            app:layout_constraintStart_toEndOf="@id/pedulilindungi"
            app:layout_constraintEnd_toStartOf="@id/bazar"
            android:src="@drawable/offstore"
            android:backgroundTint="@color/none"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/bangga"
            app:layout_constraintStart_toStartOf="@id/bangga"
            app:layout_constraintEnd_toEndOf="@id/bangga"
            android:text="@string/lihat_semua"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/bazar"
            app:layout_constraintEnd_toStartOf="@id/liveshop"
            app:layout_constraintTop_toTopOf="@id/fitur2box"
            app:layout_constraintStart_toEndOf="@id/bangga"
            android:src="@drawable/offstore"
            android:backgroundTint="@color/none"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/bazar"
            app:layout_constraintStart_toStartOf="@id/bazar"
            app:layout_constraintEnd_toEndOf="@id/bazar"
            android:text="@string/kebutuhan_harian"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/liveshop"
            app:layout_constraintTop_toTopOf="@id/fitur2box"
            app:layout_constraintStart_toEndOf="@id/bazar"
            app:layout_constraintEnd_toStartOf="@id/tokpedseru"
            android:src="@drawable/offstore"
            android:backgroundTint="@color/none"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/liveshop"
            app:layout_constraintStart_toStartOf="@id/liveshop"
            app:layout_constraintEnd_toEndOf="@id/liveshop"
            android:text="@string/handphone"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/tokpedseru"
            app:layout_constraintStart_toEndOf="@id/liveshop"
            app:layout_constraintTop_toTopOf="@id/fitur2box"
            app:layout_constraintEnd_toEndOf="@id/fitur2box"
            android:src="@drawable/offstore"
            android:backgroundTint="@color/none"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/tokpedseru"
            app:layout_constraintStart_toStartOf="@id/tokpedseru"
            app:layout_constraintEnd_toEndOf="@id/tokpedseru"
            android:text="@string/keuangan"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/videoteks"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/fitur2box"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/video_menarik_untukmu"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="@string/lihat"
        app:layout_constraintTop_toBottomOf="@id/fitur2box"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        android:textStyle="bold"
        android:textColor="@color/greengojek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <HorizontalScrollView
        android:id="@+id/videoscroll"
        app:layout_constraintTop_toBottomOf="@id/videoteks"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scrollbox"
            android:layout_width="512dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/video1"
                android:layout_marginHorizontal="4dp"
                app:layout_constraintTop_toTopOf="@id/scrollbox"
                app:layout_constraintStart_toStartOf="@id/scrollbox"
                app:layout_constraintEnd_toStartOf="@id/video2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/videoscroll"
                tools:ignore="NotSibling" />
            <ImageView
                android:id="@+id/video2"
                android:layout_marginHorizontal="4dp"
                app:layout_constraintTop_toTopOf="@id/video1"
                app:layout_constraintStart_toEndOf="@id/video1"
                app:layout_constraintEnd_toStartOf="@id/video3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/videoscroll"
                tools:ignore="NotSibling" />
            <ImageView
                android:id="@+id/video3"
                android:layout_marginHorizontal="4dp"
                app:layout_constraintTop_toTopOf="@id/video2"
                app:layout_constraintStart_toEndOf="@id/video2"
                app:layout_constraintEnd_toStartOf="@id/video4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/videoscroll"
                tools:ignore="NotSibling" />
            <ImageView
                android:id="@+id/video4"
                android:layout_marginHorizontal="4dp"
                app:layout_constraintTop_toTopOf="@id/video3"
                app:layout_constraintStart_toEndOf="@id/video3"
                app:layout_constraintEnd_toEndOf="@id/scrollbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/videoscroll"
                tools:ignore="NotSibling" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/kejardisc"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/videoscroll"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/kejar_diskon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/berakhir"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/kejardisc"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/berakhir_dalam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginStart="2dp"
        android:id="@+id/bgtime"
        android:src="@drawable/bgtime"
        app:layout_constraintStart_toEndOf="@id/berakhir"
        app:layout_constraintTop_toTopOf="@id/berakhir"
        app:layout_constraintBottom_toBottomOf="@id/berakhir"
        android:layout_width="172dp"
        android:layout_height="24dp"/>

    <ImageView
        android:id="@+id/clock_i"
        app:layout_constraintStart_toStartOf="@id/bgtime"
        app:layout_constraintTop_toTopOf="@id/bgtime"
        app:layout_constraintBottom_toBottomOf="@id/bgtime"
        app:layout_constraintEnd_toStartOf="@id/menit"
        android:src="@drawable/ic_baseline_access_time_24"
        android:layout_width="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/menit"
        app:layout_constraintTop_toTopOf="@id/bgtime"
        app:layout_constraintBottom_toBottomOf="@id/bgtime"
        app:layout_constraintStart_toEndOf="@id/clock_i"
        android:textColor="@color/white"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:text="@string/_09_menit_26_detik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintTop_toTopOf="@id/berakhir"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:layout_marginEnd="8dp"
        android:textColor="@color/greengojek"
        android:text="@string/lihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/bgdisc"
        app:layout_constraintTop_toBottomOf="@id/berakhir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/bg_gradient_tokped"/>

    <HorizontalScrollView
        android:id="@+id/discountscroll"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@id/bgdisc"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
